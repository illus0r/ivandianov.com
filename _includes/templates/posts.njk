<section class="blog-posts">
  {% for post in search.pages("type=post language="+language) %}
   <div class="post-item">
     <div class="time">{{ post.data.date | date('yyyy MMM dd') }}</div>
     <h2 class="post-title">
       <a href="{{ post.data.url }}">
        {{ post.data.title }}
       </a>
     </h2>
   {# </div> #}

    {% endfor %}
</section>