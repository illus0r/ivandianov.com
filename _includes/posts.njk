<section class="blog-posts">
	{% for post in collections.posts %}
		{% if post.data.lang == lang and post.data.draft != true %} 
		<div class="post-item">
			<div class='meta'>
				{% if post.data.threadName %}
					<span class="progress" style="--progress: 360deg;"></span> {{ 'Цепочка' if lang == 'ru' else 'Thread' }}
				{% else %}
					{% set progress = post.data.progress %}
					{% include "progress.njk" %}
				{% endif %}
				{# <span class="time">{{ post.date | date('yyyy MMM dd') }}</span> #}
			</div>
			<h2 class="post-title">
				<a href="{{ post.url }}">{{ post.data.title }}</a>
			</h2>
		</div>
		{% endif %}
	{% endfor %}
</section>
